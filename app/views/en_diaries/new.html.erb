<h1>日本語で書いた日記を英訳しよう！</h1>

<%= form_with(model: @en_diary, local: true) do |form| %>
  <div class="en_form">
    <div class="ja_text">
      <%= @ja_diary %>
    </div>
    <div>
      <%= form.text_area :body, class: "en_text_area", required: true %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>